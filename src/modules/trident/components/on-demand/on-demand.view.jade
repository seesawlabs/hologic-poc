.horizontal-line
.on-demand
  .trident-separator
    .container
      .row
        .col-md-6
          h1 On-demand
        .col-md-6
          p Experience short, discrete Trident System lessons
      
  .container
        .row
          .on-demand-left.col-md-3.pull-left
            ul.list-group.pull-left
              li.list-group-item(ng-repeat="item in vm.items | limitTo:4")
                a(ng-bind="item.name" add-class ng-click="vm.displayMenu(item)")

            ul.list-group.pull-left
              li.list-group-item(ng-repeat="item in vm.items | limitTo:4:4")
                a(ng-bind="item.name" add-class ng-click="vm.displayMenu(item)")
            
          .col-md-9.col-xs-12.pull-left
            ul.list-group.on-demand-menu
              li.list-group-item(ng-repeat="video in vm.selectedItem.videos" ng-link="['TridentVideo', {videoId: video.videoId}]")
                  a(ng-bind="video.name")
                  i.fa.fa-chevron-right.arrow-item(aria-hidden="true")
                  
            .no-data-copy-bg(ng-if="!vm.selectedItem.videos") Click buttons at left to view a menu of options. 
            .no-data-copy-sm(ng-if="!vm.selectedItem.videos") Click buttons above to view a menu of options.
          
      ng-outlet

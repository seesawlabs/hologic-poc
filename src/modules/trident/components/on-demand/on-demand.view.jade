.on-demand
  .trident-separator
    .container
      .row
        .col-md-5
          h1 On-Demand
        .col-md-7
          p Experience short, discrete Trident&trade; System lessons
      
  .container
        .row
          .on-demand-left.col-md-4.pull-left
            ul.list-group.pull-left
              li.list-group-item(ng-repeat="item in vm.items | limitTo:4")
                a(ng-bind="item.name" add-class ng-click="vm.displayMenu(item)")

            ul.list-group.pull-left
              li.list-group-item(ng-repeat="item in vm.items | limitTo:4:4")
                a(ng-bind="item.name" add-class ng-click="vm.displayMenu(item)")
            
          .col-md-8.col-xs-12.pull-left
            ul.list-group.on-demand-menu
              li.list-group-item(ng-repeat="video in vm.selectedItem.videos" ng-link="['TridentVideo', {videoId: video.videoId}]")
                  a(ng-bind="video.name")
                  i.fa.fa-chevron-right.arrow-item(aria-hidden="true")
                  
            .no-data-copy-bg(ng-if="!vm.selectedItem.videos") Click or tap a category on the left to reveal corresponding lessons here.
            .no-data-copy-sm(ng-if="!vm.selectedItem.videos") Click or tap a category above to reveal corresponding lessons here.
          
      ng-outlet

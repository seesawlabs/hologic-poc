div.trident-separator
  h1.pull-left On-demand
.row
  .on-demand
      .col-sm-5
        ul.list-group.pull-left
          li.list-group-item(ng-repeat="item in vm.items")
            a(ng-bind="item.name" ng-click="vm.displayMenu(item)")
          
      .col-sm-6
        ul.list-group.on-demand-menu
          li(ng-repeat="video in vm.selectedItem.videos" ng-link="['TridentVideo', {videoId: video.videoId}]" class="list-group-item")
            a(ng-bind="video.name")
            i.fa.pull-right.fa-chevron-right(aria-hidden="true")
      
  ng-outlet

doctype html
html(lang="en" ng-app="trident")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    //- link(rel="shortcut icon", href="#{config.favicon}")

    title=config.title
    link(href='https://fonts.googleapis.com/css?family=Montserrat', rel='stylesheet', type='text/css')
    each paths, base in config.dependencies.css
      each path in paths
        link(href="#{base}/#{path}", rel="stylesheet")
    each path in ['styles']
      link(href="css/#{path}#{cachebust}.css", rel="stylesheet")
      
  body(ng-app="titan")
    app
    each paths, base in config.dependencies.js
      each path in paths
        script(src="#{base}/#{path}")
    each path in ['bundle', 'templates', 'env']
        script(src="js/#{path}#{cachebust}.js")
        
    div(id="preload")
     img(src="/assets/img/bg-green.png" width="1" height="1") 
     img(src="/assets/img/bg-purple.png" width="1" height="1")
     img(src="/assets/img/bg-yellow.png" width="1" height="1") 
     img(src="/assets/img/bg-lightblue.png" width="1" height="1") 
     img(src="/assets/img/bg-blue.png" width="1" height="1") 
    
    if (env == 'local')
      script
        | document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js"></' + 'script>')
